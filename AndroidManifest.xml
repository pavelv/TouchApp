<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.pavelv.touchapp"
      android:versionCode="1"
      android:versionName="1.0">
<uses-permission android:name="android.permission.INTERNET"/>
<uses-permission android:name="android.permission.GET_TASKS"/>
    <application android:label="@string/app_name"
        android:icon="@drawable/icon"
        android:theme="@style/Theme.NoBackground" >
        <activity android:name=".Splash"
            
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
            <activity android:name=".Touch"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="com.pavelv.touchapp.TOUCH" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>    
		<activity android:name=".WebViewActivity" android:exported="false">
    <intent-filter>
        		<action android:name="android.intent.action.VIEW" />
       		    <category android:name="android.intent.category.DEFAULT" />
        		<data android:scheme="myscheme" />
   			 </intent-filter>
		</activity>        
        <activity android:name=".NewsList"></activity>
        <activity android:name=".NewsGroup"></activity>        
        <activity android:name=".CatalogueList"></activity>
        <activity android:name=".CatalogueGroup"></activity>
        <activity android:name=".CatalogueItem"></activity>        
        <activity android:name=".RadioList"></activity>  
        <activity android:name=".RadioGroup"></activity>
        <activity android:name=".RadioItem"></activity>
        <activity android:name=".RecipesList"></activity>
        <activity android:name=".RecipesSecondList"></activity>
        <activity android:name=".RecipesItem"></activity>  
        <activity android:name=".RecipesGroup"></activity>
        <activity android:name=".PhotosList"></activity>
        <activity android:name=".PhotosGroup"></activity>
        <activity android:name=".PhotoItem"></activity>                                           
        <activity android:name=".SecondActivityGroup"></activity>     
        <activity android:name=".FirstGroup"></activity>
        <activity android:name=".ShowCity"></activity>
                <activity android:name=".DisplayNotification" >
            <intent-filter>
                <action android:name="com.pavelv.touchapp.DisplayNotification" />
                <category android:name="android.intent.category.DEFAULT" /> 
            </intent-filter>
        </activity>
    </application>
</manifest> 
